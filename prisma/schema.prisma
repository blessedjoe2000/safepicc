generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String   @id @default(uuid())
  adminId     String
  title       String   @db.Text
  description String?  @db.Text
  price       Float?
  videoUrl    String?  @db.Text
  isPublished Boolean? @default(false)

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  muxData MuxData?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
}

model Category {
  id      String   @id @default(uuid())
  name    String   @unique
  courses Course[]
}

model MuxData {
  id         String  @id @default(uuid())
  assetId    String?
  playbackId String?
  courseId   String? @unique
  course     Course? @relation(fields: [courseId], references: [id], onDelete: Cascade) //Full Relation

  @@index([courseId])
}
